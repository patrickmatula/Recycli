<Window
    x:Class="Recycli.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Recycli"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Recycli"
    Width="800"
    Height="550"
    d:DataContext="{d:DesignInstance Type=local:ViewModel}"
    ThemeMode="Light"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="25" />
            <RowDefinition Height="25" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="1"
            Margin="0,0,20,0"
            HorizontalAlignment="Right"
            FontSize="10"
            Text="{Binding VersionText}" />
        <TextBlock
            Grid.Row="2"
            Margin="20,0,0,0"
            Text="Select the items you want to restore (multiple selection with CTRL)" />

        <TextBlock
            Grid.Row="3"
            Margin="0,0,280,0"
            HorizontalAlignment="right"
            VerticalAlignment="Center"
            Text="Search" />
        <TextBox
            Grid.Row="3"
            Width="250"
            Height="30"
            Margin="0,0,20,0"
            HorizontalAlignment="Right"
            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

        <DockPanel Grid.Row="4">
            <ListView
                Grid.Row="4"
                ItemsSource="{Binding VisibleRecycleBinFiles, Mode=TwoWay}"
                SelectionChanged="ListView_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <Run Text="{Binding Name}" />
                        </TextBlock>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </DockPanel>


        <Button
            Grid.Row="5"
            Margin="0,10,100,0"
            HorizontalAlignment="Right"
            Command="{Binding RestoreFileCommand}">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="Restore " />
                <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xE7A7;" />
            </StackPanel>
        </Button>

        <Button
            Grid.Row="5"
            Margin="0,10,10,0"
            HorizontalAlignment="Right"
            Command="{Binding DeleteFileCommand}">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" Text="Delete " />
                <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}" Text="&#xE74D;" />
            </StackPanel>
        </Button>
    </Grid>
</Window>

